<div id="step1">
  <section class="m_box angled-135 stripes border_radius">
    <div class="m_bt">看单词,选择下面的词义。<span onclick="javascript:close_window();">关闭</span><span class="count_down">50</span></div>
    <article class="words_audio">
      <h3><%= @word.name %></h3>
    </article>
    <div class="to_be_sort">
      <section class="words_list border_radius">
        <p onclick="javascript:answer_correct();"><%= PhoneWord::WORD_TYPE[@word.types] %><span><%= @word.ch_mean %></span></p>
      </section>
      <% @other_words.each do |w| %>
        <section class="words_list border_radius">
          <p onclick="javascript:answer_mistake();"><%= PhoneWord::WORD_TYPE[w.types] %><span><%= w.ch_mean %></span></p>
        </section>
      <% end %>
    </div>
  </section>
  <section class="words_btn_box">
    <div class="rollBack" onclick="javascript:rollback();">翻面学习</div>
    <div class="knowWell" onclick="javascript:click_knowwell();">已经掌握</div>
  </section>
</div>